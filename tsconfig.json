// 이 프로젝트에서 타입스크립트는 오직 타입 체크만 수행
{
	"compilerOptions": {
		"noEmit": true,
		// 컴파일 결과물 생성 안 함.
		"strict": true,
		// 광범위한 타입 체크로 프로그램의 정확성 보장
		"jsx": "react",
		// 자바스크립트 파일에 JSX가 어떻게 출력될지 설정,
		// 타입 검사에는 영향을 주지 않지만 ts(17004)에러를 해결하기 위해 사용
		"allowSyntheticDefaultImports":true
		// 모듈이 default export를 사용하고 있지 않을 때 다음 구문이 가능하도록 함. ex) import React from 'react';
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}